<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book-Form</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;500;700&display=swap" rel="stylesheet">
</head>

<body>
    <header class="header_section">
        <div class="container">
            <div class="header flex">
                <a href="/">
                    <h1 class="logo">BOOK-STORE</h1>
                </a>
                <a href="/books">
                    <button class="btn">Back</button>
                </a>
            </div>
        </div>
    </header>

    <main>
        <section>
            <div class="container">
                <div>
                    <form class="form" action="/books" method="POST">
                        <h3 class="form_heading">Add Book</h3>
                        <input type="text" name="title" placeholder="Enter your title" id="">
                        <textarea name="summary" id="" placeholder="Enter summary" cols="30" rows="10"></textarea>
                        <input type="text" name="pages" placeholder="Enter your pages" id="">
                        <input type="text" name="coverImage" placeholder="Enter image url" id="">
                        <input type="text" name="category" placeholder="Enter Category" id="">
                        <select name="authorId" id="">
                            <% authors.forEach(author=> { %>
                                <option value="<%= author.id %>">
                                    <%= author.name %>
                                </option>
                                <% }) %>
                        </select>
                        <div class="">
                            <button class="btn form_btn" type="submit">Add Book</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
</body>

</html>